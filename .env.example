# Curlydots CLI environment variables
# Copy this file to .env and fill in secrets as needed.

# API endpoint override (optional)
CURLYDOTS_API_URL=https://api.curlydots.com

# Authentication token for CI/CD usage (set per environment).
# Used when running in automated environments.
# Override API base URL (optional)
CURLYDOTS_API_ENDPOINT=https://curlydots.com/api

# Override browser login base URL (optional)
CURLYDOTS_AUTH_BROWSER_URL=https://curlydots.com/cli

# Disable keytar usage (set to 1 to force file storage)
CURLYDOTS_DISABLE_KEYTAR=0

# Authentication token for CI/CD usage (set per environment)
CURLYDOTS_TOKEN=

# Enable verbose logging (true/false) 
# Set to true for detailed output
CURLYDOTS_DEBUG=false
