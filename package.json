{
  "name": "@curlydots/cli",
  "version": "0.1.0",
  "description": "CLI tool to analyze translation files and find missing translations with code context",
  "main": "bin/curlydots.js",
  "type": "module",
  "private": false,
  "bin": {
    "curlydots": "bin/curlydots.js"
  },
  "files": ["bin", "vendor", "README.md"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "dist:build-target": "node scripts/distribution/build-target.mjs",
    "dist:stage-npm": "node scripts/distribution/stage-npm-package.mjs",
    "dist:release-check": "node scripts/distribution/release-check.mjs"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "fast-csv": "^5.0.5",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "keytar": "^7.9.0",
    "open": "^11.0.0",
    "openai": "^6.9.1",
    "p-limit": "^7.2.0",
    "react": "^18.3.1",
    "react-devtools-core": "^4.28.5",
    "wink-eng-lite-web-model": "^1.8.1",
    "wink-nlp": "^2.4.0",
    "zod": "^4.2.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/react": "^18.3.12",
    "ink-testing-library": "^4.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
